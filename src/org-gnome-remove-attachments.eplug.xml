<?xml version="1.0"?>
<e-plugin-list>
  <e-plugin
    type="shlib"
    id="org.gnome.plugin.attachments.remove"
    location="@PLUGINDIR@/liborg-gnome-evolution-remove-attachments.so"
    _name="Remove attachments">
    <_description>A plugin which allows to remove attachments from message.</_description>
    <author name="Rex Tsai" email="chihchun@kalug.linux.org.tw"/>

    <!-- hook into the uri popup menu -->
    <hook class="org.gnome.evolution.mail.popup:1.0">
      <menu id="org.gnome.evolution.mail.folderview.popup" target="select">
	<item
	  type="item"
	  path="40.remove_attachment"
	  icon="stock_delete"
	  _label="_Remove attachments"
	  enable="all"
	  visible="all"
	  activate="org_gnome_remove_attachments"/>
      </menu>
    </hook>
    <hook class="org.gnome.evolution.mail.bonobomenu:1.0">
      <menu id="org.gnome.evolution.mail.browser" target="select">
	<ui file="@PLUGINDIR@/org-gnome-remove-attachments.xml"/>
	<item
	  type="item"
	  verb="EPRARemoveAttachments"
	  path="/commands/EPRARemoveAttachments"
	  enable="all"
	  activate="org_gnome_remove_attachments"/>
      </menu>
    </hook>
    <hook class="org.gnome.evolution.mail.bonobomenu:1.0">
      <menu id="org.gnome.evolution.mail.messagebrowser" target="select">
	<ui file="@PLUGINDIR@/org-gnome-remove-attachments.xml"/>
	<item
	  type="item"
	  verb="EPRARemoveAttachments"
	  path="/commands/EPRARemoveAttachments"
	  enable="all"
	  activate="org_gnome_remove_attachments"/>
      </menu>
    </hook>
  </e-plugin>
</e-plugin-list>
